# Editor Configuration - https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.adoc]
trim_trailing_whitespace = false

[*.bash]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[*.scm]
indent_size = 2
