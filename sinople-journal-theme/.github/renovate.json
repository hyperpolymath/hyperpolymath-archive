{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 9am on monday"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "hyperpolymath"
  ],
  "reviewers": [
    "hyperpolymath"
  ],
  "rangeStrategy": "bump",
  "separateMinorPatch": true,
  "packageRules": [
    {
      "groupName": "WordPress packages",
      "matchPackagePatterns": [
        "^@wordpress/"
      ],
      "schedule": [
        "before 9am on monday"
      ]
    },
    {
      "groupName": "TypeScript and related",
      "matchPackageNames": [
        "typescript",
        "@types/node",
        "ts-jest",
        "ts-loader"
      ]
    },
    {
      "groupName": "Testing libraries",
      "matchPackagePatterns": [
        "^jest",
        "^@testing-library/"
      ]
    },
    {
      "groupName": "Build tools",
      "matchPackageNames": [
        "esbuild",
        "sass",
        "webpack"
      ]
    },
    {
      "groupName": "Linting tools",
      "matchPackageNames": [
        "eslint",
        "stylelint",
        "prettier"
      ],
      "matchPackagePatterns": [
        "^eslint-",
        "^stylelint-",
        "^@typescript-eslint/"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "major-update"
      ],
      "automerge": false
    },
    {
      "matchPackagePatterns": [
        "^@types/"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "assignees": [
      "hyperpolymath"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 9am on the first day of the month"
    ]
  },
  "prConcurrentLimit": 10,
  "prHourlyLimit": 5,
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "configMigration": true
}
